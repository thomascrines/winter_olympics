<h2>Update Athlete Details</h2>

  <form action="/athletes/<%= @athlete.id %>" method="post">

    <input type="hidden" name="_method" value="put">

    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= @athlete.name %>">

    <label for="gender">Field:</label>
    <input type="text" name="gender" value="<%= @athlete.gender %>">
    
    <label for="team_id">Team:</label>
    <select name="team_id">
      <% @teams.each do |team| %>
      <option value ="<%= team.id %>"><%= team.name %></option>
      <% end %>
    </select>

    <input type='submit' value="Update Athlete">
  </form>

