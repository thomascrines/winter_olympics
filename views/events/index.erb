<h2>Events</h2>

<a href="/events/new">Add an event</a>

<% @events.each do |event| %>

  <p><%= event.name %>
    <%= event.gold_winner.name if event.gold_winner != nil %>

    <%= event.silver_winner.name if event.silver_winner != nil %>

    <%= event.bronze_winner.name if event.bronze_winner != nil %>

    <a href="/events/<%= event.id %>/edit">rename event</a>

    <a href="/results/<%= event.id %>/edit">update results</a>

    <a href="/events/<%= event.id %>/delete">delete event</a>

    
  </p>

<% end %>