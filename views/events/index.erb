<h2>Events</h2>

<a href="/events/new">Add an event</a>
<hr>

<table style="width:100%">
  <tr>
    <th>Name</th>
    <th><div id="gold"></div></th>
    <th><div id="silver"></div></th>
    <th><div id="bronze"></div></th>
    <th></th>
    <th></th>
</tr>

<% @events.each do |event| %>
<tr>
    <td height="28"><a href="/events/<%= event.id %>/edit"><%= event.name %></a></td>
    <td><%= event.gold_winner.name if event.gold_winner != nil %></td>
    <td><%= event.silver_winner.name if event.silver_winner != nil %></td>
    <td><%= event.bronze_winner.name if event.bronze_winner != nil %></td>

    <td>
        <% if event.gold_winner == nil %>
        <a href="/results/new?id=<%= event.id %>">add results</a>
        <% else %>
        <a href="/results/<%= event.result.id %>/edit">edit results</a>
        <% end %>
    </td>

    <td>
        <form action="/events/<%= event.id %>" method="post">
            <input type="submit" value="Delete"/>
            <input name="_method" type="hidden" value="delete"/>  
        </form>
    </td>
</tr>
<% end %>


